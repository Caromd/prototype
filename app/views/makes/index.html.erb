<div id="content">
  <h1>MANAGE MAKES</h1>
  <hr class="push_both" />
  <table>
    <thead>
      <tr>
        <td class="col-md-1">ID</td>
        <td class="col-md-8">Name</td>
        <td class="col-md-1">Actions</td>
      </tr>
    </thead>
    <tbody>
      <% @makes.each do |make| %>
        <tr>
          <td class="col-md-1"><%= make.id %></td>
          <td class="col-md-8"><%= make.name %></td>
          <td class="col-md-1"><%= link_to 'Edit', edit_make_path(make) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr class="push_both" />
  <h2>Create New Make</h2>
  <%= form_for @make, url: {controller: "makes", action: "create"} do |m| %>
    <div class="field"><%= m.text_field :name %></div>
    <%= m.submit "Add New Make"%>
  <% end %>
</div>