<div id="content">
  <%= link_to 'Add Owner', new_owner_path, class: "button" %>
  <h1>MANAGE OWNERS</h1>
  <hr class="push_both" />
  <table>
    <thead>
      <tr>
        <td class="col-md-1">ID</td>
        <td class="col-md-8">Name</td>
        <td class="col-md-1">Actions</td>
      </tr>
    </thead>
    <tbody>
      <% @owners.each do |owner| %>
        <tr>
          <td class="col-md-1"><%= owner.id %></td>
          <td class="col-md-8"><%= owner.name %></td>
          <div class="col-md-1">
            <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
            <td><%= link_to 'Delete', owner_url(owner), method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %></td>
          </div>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>