<div id="content">
  <%= link_to 'Add Owner', new_owner_path, class: "button" %>
  <h1>MANAGE OWNERS</h1>
  <hr class="push_both" />
  <%= search_form_for @q do |f| %>
    <%= f.label :name_cont, "Search Name for" %><%= f.search_field :name_cont %><%= f.submit %>
  <% end %>
  <table>
    <thead>
      <tr>
        <td class="col-md-1"><%= sort_link(@q, :id, 'ID', default_order: :desc) %></td>
        <td class="col-md-8"><%= sort_link(@q, :name, 'Name') %></td>
        <td class="col-md-1">Actions</td>
      </tr>
    </thead>
    <tbody>
      <% @owners.each do |owner| %>
        <tr>
          <td class="col-md-1"><%= owner.id %></td>
          <td class="col-md-8"><%= owner.name %></td>
          <td class="col-md-1"><%= link_to 'Edit', edit_owner_path(owner) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>