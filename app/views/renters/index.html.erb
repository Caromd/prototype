<div id="content">
  <%= link_to 'Add Renter', new_renter_path, class: "button" %>
  <h1>MANAGE RENTERS</h1>
  <hr class="push_both" />
  <%= search_form_for @q do |f| %>
    <%= f.label :name_or_surname_cont, "Search Name for" %><%= f.search_field :name_or_surname_cont %><%= f.submit %>
  <% end %>
  <table>
    <thead>
      <tr>
        <th class="col-md-1"><%= sort_link(@q, :id, 'ID', default_order: :desc) %></th>
        <th class="col-md-6"><%= sort_link(@q, :surname, 'Name') %></th>
        <th class="col-md-2"><%= sort_link(@q, :id_number, 'ID Number') %></th>
        <th class="col-md-1">Actions</td>
      </tr>
    </thead>
    <tbody>
      <% @renters.each do |renter| %>
        <tr>
          <td class="col-md-1"><%= renter.id %></td>
          <td class="col-md-6"><%= renter.name + ' ' + renter.surname %></td>
          <td class="col-md-2"><%= renter.id_number %></td>
          <td class="col-md-1"><%= link_to 'Edit', edit_renter_path(renter) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>