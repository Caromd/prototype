<div id="content">
  <%= link_to 'Add Renter', new_renter_path, class: "button" %>
  <h1>MANAGE RENTERS</h1>
  <hr class="push_both" />
  <table>
    <thead>
      <tr>
        <td class="col-md-1">ID</td>
        <td class="col-md-6">Name</td>
        <td class="col-md-2">Id Number</td>
        <td class="col-md-1">Actions</td>
      </tr>
    </thead>
    <tbody>
      <% @renters.each do |renter| %>
        <tr>
          <td class="col-md-1"><%= renter.id %></td>
          <td class="col-md-6"><%= renter.name + ' ' + renter.surname %></td>
          <td class="col-md-2"><%= renter.id_number %></td>
          <div class="col-md-1">
            <td><%= link_to 'Edit', edit_renter_path(renter) %></td>
            <td><%= link_to 'Delete', renter_url(renter), method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %></td>
          </div>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>