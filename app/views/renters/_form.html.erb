<%= form_for(@renter) do |f| %>
  <% if @renter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@renter.errors.count, "error") %> prohibited this renter from being saved:</h2>

      <ul>
      <% @renter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field"><%= f.label :status %><%= f.collection_select :status, @statuses, :to_s, :to_s %></div>
  <div class="field"><%= f.label :name %><%= f.text_field :name %></div>
  <div class="field"><%= f.label :surname %><%= f.text_field :surname %></div>
  <div class="field"><%= f.label "ID/Passport Number" %><%= f.text_field :id_number %></div>
  <div class="field"><%= f.label :email %><%= f.text_field :email %></div>
  <div class="field"><%= f.label :drivers_licence %><%= f.text_field :drivers_licence %></div>
  <div class="field"><%= f.label :date_drivers_licence_expires %><%= f.date_field :date_drivers_licence_expires %></div>
  <h2>Financial</h2>
  <div class="field"><%= f.label :payment_method %><%= f.collection_select :payment_method, @payment_methods, :to_s, :to_s %></div>
  <div class="field"><%= f.label :net_monthly_household_income, "Net Monthly Income"%><%= f.number_field :net_monthly_household_income %></div>
  <div class="field"><%= f.label :max_rental_approved %><%= f.number_field :max_rental_approved %></div>
  <div class="field"><%= f.label :consent_to_credit_check %><%= f.check_box :consent_to_credit_check %></div>
  <div class="field"><%= f.label :clean_credit_record %><%= f.check_box :clean_credit_record %></div>  
  <h2>Address Details</h2>
  <div class="field"><%= f.label :residential_address1 %><%= f.text_field :residential_address1 %></div>
  <div class="field"><%= f.label :residential_address2 %><%= f.text_field :residential_address2 %></div>
  <div class="field"><%= f.label :suburb %><%= f.text_field :suburb %></div>
  <div class="field"><%= f.label :city %><%= f.text_field :city %></div>
  <div class="field"><%= f.label :province %><%= f.collection_select :province, @provinces, :to_s, :to_s %></div>
  <div class="actions"><%= f.submit %></div>
<% end %>