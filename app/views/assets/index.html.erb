<div id="content">
  <%= link_to 'Add Asset', new_asset_path, class: "button" %>
  <h1>MANAGE ASSETS</h1>
  <hr class="push_both" />
  <table>
    <thead>
      <tr>
        <td class="col-md-1">ID</td>
        <td class="col-md-2">Make/Model</td>
        <td class="col-md-2">Registration</td>
        <td class="col-md-4">Owner</td>
        <td class="col-md-1">Actions</td>
      </tr>
    </thead>
    <tbody>
      <% @assets.each do |asset| %>
        <tr>
          <td class="col-md-1"><%= asset.id %></td>
          <td class="col-md-2"><%= asset.make + " " + asset.model %></td>
          <td class="col-md-2"><%= asset.registration_number %></td>
          <td class="col-md-4"><%= asset.owner.id.to_s + " " + asset.owner.name %></td>
          <div class="col-md-1">
            <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
            <td><%= link_to 'Delete', asset_url(asset), method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %></td>
          </div>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>