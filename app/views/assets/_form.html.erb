<%= form_for(@asset) do |f| %>
  <% if @asset.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@asset.errors.count, "error") %> prohibited this asset from being saved:</h2>

      <ul>
      <% @asset.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field"><%= f.label :owner_id %><%= f.collection_select :owner_id, @owners, :id, :name, {include_blank: 'Select an owner'} %></div>
  <h2>Vehicle Details</h2>
  <div class="field"><%= f.label :make_id %><%= f.collection_select :make_id, @makes, :id, :name, {include_blank: 'Select a make'} %></div>
  <div class="field"><%= f.label :model_id %><%= f.grouped_collection_select :model_id, Make.order(:name), :models, :name, :id, :name, {include_blank: 'Select a model'}, {id: "asset_model_id"}  %>
  <%#= f.collection_select :model_id, Model.order(:name), :id, :name %>
  </div>
  <div class="field"><%= f.label :colour %><%= f.text_field :colour %></div>
  <div class="field"><%= f.label :registration_number %><%= f.text_field :registration_number %></div>
  <div class="field"><%= f.label :first_registration_date %><%= f.date_field :first_registration_date  %></div>
  <div class="field"><%= f.label :vin_number %><%= f.text_field :vin_number %></div>
  <div class="field"><%= f.label :engine_number %><%= f.text_field :engine_number %></div>
  <div class="field"><%= f.label :purchase_price %><%= f.number_field :purchase_price %></div>
  <div class="field"><%= f.label :date_of_purchase %><%= f.date_field :date_of_purchase  %></div>
  <div class="field"><%= f.label :vehicle_license_expiry_date %><%= f.date_field :vehicle_license_expiry_date %></div>  
  <div class="field"><%= f.label :date_loaded_on_system %><%= f.date_field :date_loaded_on_system %></div>
  <h2>Availability</h2>
  <div class="field"><%= f.label :rental_date_available_from %><%= f.date_field :rental_date_available_from %></div>
  <div class="field"><%= f.label :rental_date_available_to %><%= f.date_field :rental_date_available_to %></div>
  <h2>Insurance and Roadside Assistance</h2>
  <div class="field"><%= f.label :insurer %><%= f.text_field :insurer %></div>
  <div class="field"><%= f.label :policy_number %><%= f.text_field :policy_number %></div>
  <div class="field"><%= f.label :roadside_assistance_provider, "Roadside Assistance" %><%= f.text_field :roadside_assistance_provider %></div>
  <div class="field"><%= f.label :roadside_assistance_number %><%= f.text_field :roadside_assistance_number %></div>
  <h2>Servicing</h2>
  <div class="field"><%= f.label :full_service_history %><%= f.check_box :full_service_history %></div>
  <div class="field"><%= f.label :service_plan %><%= f.check_box :service_plan %></div>
  <div class="field"><%= f.label :service_plan_start_date %><%= f.date_field :service_plan_start_date %></div>
  <div class="field"><%= f.label :service_plan_end_date %><%= f.date_field :service_plan_end_date %></div>
  <div class="field"><%= f.label :service_plan_km %><%= f.text_field :service_plan_km %></div>
  <div class="field"><%= f.label :service_intervals %><%= f.text_field :service_intervals %></div>
  <div class="field"><%= f.label :date_of_last_service %><%= f.date_field :date_of_last_service %></div>
  <div class="field"><%= f.label :date_of_next_service %><%= f.date_field :date_of_next_service %></div>
  <div class="field"><%= f.label :date_of_last_service %><%= f.date_field :date_of_last_service %></div>
  <div class="field"><%= f.label :date_of_next_service %><%= f.date_field :date_of_next_service %></div>
  <div class="field"><%= f.label :km_next_service %><%= f.text_field :km_next_service %></div>
  <h2>Warranty</h2>
  <div class="field"><%= f.label :warranty %><%= f.check_box :warranty %></div>
  <div class="field"><%= f.label :warranty_start_date %><%= f.date_field :warranty_start_date %></div>
  <div class="field"><%= f.label :warranty_end_date %><%= f.date_field :warranty_end_date %></div>
  <div class="field"><%= f.label :warranty_km %><%= f.text_field :warranty_km %></div>
  <h2>E-tag</h2>
  <div class="field"><%= f.label :etag %><%= f.check_box :etag %></div>
  <div class="field"><%= f.label :etag_number %><%= f.text_field :etag_number %></div>
  
  <div class="actions"><%= f.submit %></div>
<% end %>